<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory suffix=".php">./app/Http/Controllers</directory>
            <directory suffix=".php">./app/Actions</directory>
        </include>
        <exclude>
            <directory suffix=".php">./app/Actions/Concerns</directory>
        </exclude>
    </source>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="DB_DATABASE" value="sports_testing"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="AWS_BUCKET" value="sports-testing"/>
        <env name="PUSHER_APP_ID" value="app-id"/>
        <env name="PUSHER_APP_KEY" value="app-key"/>
        <env name="PUSHER_APP_SECRET" value="app-secret"/>
        <env name="SCOUT_PREFIX" value="testing"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="RAY_ENABLED" value="true"/>
    </php>
</phpunit>
